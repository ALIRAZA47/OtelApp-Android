<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hotelContainerMain"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_margin="8dp"
    android:elevation="16dp"
    app:cardBackgroundColor="@color/secondaryColor"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingEnd="10dp"
        android:paddingBottom="8dp">


        <ImageView
            android:id="@+id/hotelImageMain"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:elevation="10dp"
            app:tint="@color/white"
            tools:srcCompat="@tools:sample/avatars" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/primaryColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="4dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/hotelName_HotelItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hotel A"
                android:textColor="@color/secondaryTextColor"
                android:textSize="30dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Rooms: "
                    android:textColor="@color/secondaryTextColor" />

                <TextView
                    android:id="@+id/totalRooms_HotelItem"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textColor="@color/secondaryTextColor" />
            </LinearLayout>

            <TextView
                android:id="@+id/hotelAddress_HotelItem"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:inputType="textMultiLine"
                android:text="Lhr, Lahore"
                android:textColor="@color/secondaryTextColor" />

        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>