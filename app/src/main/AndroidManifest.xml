<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.otelapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OtelApp">
        <activity android:name=".BookRoomPopup" android:theme="@style/Widget.AppCompat.PopupWindow.Popme" ></activity>
        <activity android:name=".activities.SpecificHotel" />
        <activity android:name=".activities.signin_signup.VerifyPhone" />
        <activity android:name=".activities.signin_signup.SignupActivity" />
        <activity android:name=".activities.signin_signup.PhoneLoginActivity" />
        <activity
            android:name=".activities.signin_signup.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".activities.IntroActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>