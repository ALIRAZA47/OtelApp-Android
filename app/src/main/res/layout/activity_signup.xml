<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".activities.signin_signup.LoginActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic__06" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="Signup"
        android:textColor="@color/primaryTextColor"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="24dp"
                android:layout_gravity="start"
                android:textColor="@color/primaryTextColor"
                android:text="Enter your information below!"/>
            <EditText
                android:id="@+id/signupName"
                android:drawableStart="@drawable/ic_baseline_perm_identity_24"
                android:drawablePadding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/edit_text_bkg"
                android:hint="Name"
                android:inputType="textEmailAddress"
                android:selectAllOnFocus="true"
                android:textColorHint="@color/primaryTextColor" />
            <EditText
                android:id="@+id/signupEmail"
                android:drawableStart="@drawable/ic_baseline_alternate_email_24"
                android:drawablePadding="5dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/edit_text_bkg"
                android:hint="Email address"
                android:inputType="textEmailAddress"
                android:selectAllOnFocus="true"
                android:textColorHint="@color/primaryTextColor" />

            <EditText
                android:id="@+id/signupPassword"
                android:drawablePadding="5dp"

                android:drawableStart="@drawable/ic_baseline_pass_key_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/edit_text_bkg"
                android:hint="Password"
                android:inputType="textPassword"
                android:selectAllOnFocus="true"
                android:textColorHint="@color/primaryTextColor" />
            <EditText
                android:id="@+id/signupPasswordConfirm"
                android:drawableStart="@drawable/ic_baseline_pass_key_24"
                android:drawablePadding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/edit_text_bkg"
                android:hint="Confirm password"
                android:inputType="textPassword"
                android:selectAllOnFocus="true"
                android:textColorHint="@color/primaryTextColor" />
            <EditText
                android:id="@+id/signupPhone"
                android:drawableStart="@drawable/ic_baseline_phone_24"
                android:drawablePadding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/edit_text_bkg"
                android:hint="Phone number (3xxxxxx)"
                android:inputType="numberSigned"
                android:selectAllOnFocus="true"
                android:textColorHint="@color/primaryTextColor" />

            <EditText
                android:id="@+id/signupCNIC"
                android:drawableStart="@drawable/ic_baseline_perm_identity_24"
                android:drawablePadding="5dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/edit_text_bkg"
                android:hint="CNIC (without dashes)"
                android:inputType="numberSigned"
                android:selectAllOnFocus="true"
                android:textColorHint="@color/primaryTextColor" />
            <EditText
                android:id="@+id/signupAddress"
                android:layout_width="match_parent"
                android:drawableStart="@drawable/ic_baseline_house_24"
                android:layout_height="150dp"
                android:drawablePadding="5dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/edit_text_bkg"
                android:hint="Address"
                android:inputType="textMultiLine"
                android:selectAllOnFocus="true"
                android:textColorHint="@color/primaryTextColor" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_bkg"
                android:layout_height="45dp">
                <Spinner
                    android:id="@+id/genderDropDownMenu"
                    android:layout_gravity="center"
                    android:layout_width="291dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/primaryTextColor"
                    android:spinnerMode="dropdown" />

            </LinearLayout>



            <Button
                android:id="@+id/btnAddNewAccount"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_styled"
                android:drawableRight="@drawable/ic_baseline_person_add_24"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="Signup" />

            <TextView
                android:id="@+id/haveAccountLogin"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:textColor="@color/primaryTextColor"
                android:layout_height="wrap_content"
                android:text="@string/already_have_account"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>